        </dt>
        <dd>
            @Html.DisplayFor(model => model.Rate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Tags)
        </dt>
        <dd>
            @foreach (CourseProject.Models.ViewModels.TagViewModel tag in Model.Tags)
            {
                <p>@tag.Title</p>
            }
        </dd>
    </dl>
    <p>Rate:</p>
    <select id="rateComboBox">
        <option> 1</option>
        <option> 2</option>
        <option> 3</option>
        <option> 4</option>
        <option> 5</option>
    </select>
    <input type="button" id="submitRate" onclick="ProcessRate('@Model.Id')" value="Rate" />

    <p>Comments:</p>
    <ul id="@Model.Id">
        @foreach (var i in Model.Coments)
        {
        <li>
            <div>@i.Date -  @i.Name</div>
            @i.Comment
            <input type="button" id="like" onclick="ProcessLike('@i.Id')" value="like!" />
            <div>@i.Likes</div>
        </li>
            
        }
        <input type="text" id="commentFiled" />
        <input type="button" id="submitComment" onclick="ProcessComment('@Model.Id')" value="Comment" />
    </ul>
</div>
<div>
