@model CourseProject.Models.HomeViewModels.MainPageViewModel
@{
    ViewData["Title"] = "Home Page";
}


<div class="container">
    <div class="row">
        <div class="col-xs-1 col-lg-6">
            <h3>@Localizer["LatestModified"]</h3>
            <hr>
            @foreach (var item in Model.LatestModified)
            {
                <div>
                    <div>
                        <div>
                            <a>@item.Name</a>
                            <span class="text-muted text-sm"><i class="fa  fa-lg"></i> - @item.ModifitedDate</span>
                        </div>
                        <p>  @item.Speciality</p>
                        <p>  @item.Description</p>
                    </div>
                </div>
            }
        </div>

        <div class="col-xs-1 col-lg-6">
            <h3>@Localizer["TopRating"]</h3>
            <hr>
            @foreach (var item in Model.TopRating)
            {

                <div>
                    <div>
                        <div>
                            <a>@item.Name</a>
                            <span class="text-muted text-sm"><i class="fa  fa-lg"></i> - @item.ModifitedDate</span>
                        </div>
                        <p>  @item.Speciality</p>
                        <p>  @item.Description</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>




    <div id="tagCloud" style="width: 400px; height: 300px; "></div>



    @section Scripts {
        <script type="text/javascript">
        var tagList = @Json.Serialize(Model.Tags);
        var word_list = new Array();
        for (var i = 0; i < tagList.length; i++) {
            word_list.push({
                text: tagList[i].title,
                weight: tagList[i].width,
                link: '/Home/SearchByHashtag?hashtag=' + tagList[i].title
            });
        }
        $(function () {
            $("#tagCloud").jQCloud(word_list);
        });
        </script>
    }
