@model CourseProject.Models.ViewModels.MainPageViewModel
@{
    ViewData["Title"] = "Home Page";
}

<h3>@Localizer["LatestModified"]</h3>
<table class="table">
    <thead>
        <tr>
            <th>
                @Localizer["Name"]
            </th>
            <th>
                @Localizer["Description"]
            </th>
            <th>
                @Localizer["Speciality"]
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.LatestModified)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Speciality)
                </td>
                <td>
                    @Html.ActionLink("Read", "ArticleRead", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>


