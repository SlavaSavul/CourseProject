@model CourseProject.Models.HomeViewModels.ArticleDetailsViewModel

@{
    ViewData["Title"] = "ArticleEditor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveUpdatedArticle" method="post" id="formEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="container">
                <div class="row-sm-8">
                    <div class="col-sm-7">
                        <div class="form-group">
                            <textarea id="textAreaId" asp-for="Data" class="form-control"></textarea>
                            <span asp-validation-for="Data" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-5">
                        <div class="form-group">
                            <input asp-for="UserId" hidden class="form-control" autocomplete="off" />
                        </div>
                        <div class="form-group">
                            <input asp-for="Id" hidden class="form-control" autocomplete="off" />
                        </div>
                        <div class="form-group">
                            <textarea asp-for="Description" class="form-control" autocomplete="off"
                                      placeholder="@Localizer["Description"]" rows="8"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Speciality" class="form-control" autocomplete="off"
                                   placeholder="@Localizer["Speciality"]" />
                            <span asp-validation-for="Speciality" class="text-danger"></span>
                        </div>
                        <div hidden class="form-group">
                            <input asp-for="UserId" class="form-control" />
                        </div>
                        <div class="form-group">
                            <input asp-for="Name" class="form-control" autocomplete="off"
                                   placeholder="@Localizer["Name"]" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <select asp-for="Tags" multiple="" placeholder="#" class="form-control" 
                                    data-role="tagsinput" style="display: none;">
                                @foreach (string i in Model.Tags)
                                {
                                    <option value="@i">@i</option>
                                }
                            </select>
                            <span asp-validation-for="Tags" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="button" value="@Localizer["Save"]"
                                   class="btn btn-primary" onclick="$('#formEdit').submit();" />
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts{
    <script src="~/lib/editor/editor.js"></script>
}
