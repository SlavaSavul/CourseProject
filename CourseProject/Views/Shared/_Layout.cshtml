<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link id="themeFile" rel="stylesheet" href="" />
    <script src="~/js/theme.js"></script>
    <title>@ViewData["Title"] - CourseProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/lib/dataTable/css/datatables_min.css">
    <link rel="stylesheet" href="~/lib/tagsInput/css/bootstrap-tagsinput.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css">
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="~/lib/jqcloud/css/jqcloud.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.0/normalize.min.css">
    <link href="//cdnjs.cloudflare.com/ajax/libs/x-editable/1.5.0/bootstrap3-editable/css/bootstrap-editable.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/rateYo/2.3.2/jquery.rateyo.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/lib/amaran/css/amaran.css" rel="stylesheet" />

    <script src="~/lib/signalr/signalr.min.js"></script>
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script type="text/javascript" charset="utf8" src="~/lib/dataTable/js/jquery.dataTables.js"></script>
    <script src="~/lib/tagsInput/js/bootstrap-tagsinput.min.js"></script>
    <script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>
    <script src="~/lib/jqcloud/js/jqcloud-1.0.4.js"></script>
    <script src="~/lib/editor/codemirror-4.inline-attachmen.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/x-editable/1.5.0/bootstrap3-editable/js/bootstrap-editable.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/rateYo/2.3.2/jquery.rateyo.min.js"></script>
    <script src="~/js/export2Doc.js"></script>
    <script src="~/lib/amaran/js/amaran.js"></script>

</head>
<body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-main">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="~/Home/Index">@Localizer["Home"]</a>
            </div>
            <div class="collapse navbar-collapse" id="navbar-main">
                <div class="navbar-form navbar-left">
                    <div class="form-group">
                        <form asp-action="SearchByKeyword" asp-controller="Home" method="get">
                            <input type="text" class="form-control" name="keyword"
                                   placeholder="@Localizer["Search"]" id="fieldSearch" autocomplete="off">
                        </form>
                    </div>
                </div>
                @await Html.PartialAsync("_LoginPartial")
            </div>
        </div>
    </nav>
    <br />
    <div class="container body-content">
        @RenderBody()
        <br />
        <br />
        <nav class="navbar navbar-inverse navbar-fixed-bottom">
            <div class="collapse navbar-collapse" id="navbar-main">
                <div class="navbar-form navbar-right">
                    <div class="form-group" style="padding-right:20px;">
                        @await Html.PartialAsync("_SelectLanguagePartial")
                        @await Html.PartialAsync("_SelectThemePartial")
                    </div>
                </div>
            </div>
        </nav>
    </div>
    <environment include="Development">
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    @RenderSection("Scripts", required: false)
</body>
</html>
  